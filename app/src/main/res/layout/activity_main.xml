                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/rB_6a"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_6a"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_6b"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
