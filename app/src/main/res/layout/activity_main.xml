                        android:text="@string/answer_6b"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_6c"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_6c"
                        android:textColor="@color/colorText"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/question_7"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBox_7a"
                    android:buttonTint="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="@string/answer_7a"
                    android:layout_marginLeft="10dp"/>

                <CheckBox
                    android:id="@+id/checkBox_7b"
                    android:buttonTint="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_7b"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="10dp"/>

                <CheckBox
                    android:id="@+id/checkBox_7c"
                    android:buttonTint="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_7c"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_check"
                    android:textColor="@color/colorText"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:onClick="check"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
