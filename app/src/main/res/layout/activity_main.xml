<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz_app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/agua_v" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_name_editText"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/question_1"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radioGroup_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/rB_1a"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_1a"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_1b"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_1b"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_1c"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_1c"
                        android:textColor="@color/colorText"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/question_2"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radioGroup_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/rB_2a"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_2a"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_2b"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_2b"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_2c"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_2c"
                        android:textColor="@color/colorText"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/question_3"

                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radioGroup_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/rB_3a"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_3a"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_3b"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_3b"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_3c"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_3c"
                        android:textColor="@color/colorText"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/question_4"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radioGroup_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/rB_4a"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_4a"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_4b"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_4b"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_4c"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_4c"
                        android:textColor="@color/colorText"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/question_5"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radioGroup_q5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/rB_5a"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_5a"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_5b"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_5b"
                        android:textColor="@color/colorText"/>

                    <RadioButton
                        android:id="@+id/rB_5c"
                        android:buttonTint="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/answer_5c"
                        android:textColor="@color/colorText"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/question_6"
